<div class="container portfolio-container">
    <div class="row">
        <div class="col-md-7">
            <%= image_tag @portfolio_item.main_image.to_s, width: '100%' %>
        </div>
        <div class="col-md-5">
            <h1><%= @portfolio_item.title %></h1>
            <hr>
            <em><%= @portfolio_item.subtitle %></em>
            <p><%= markdown @portfolio_item.body %></p>
            <hr>
            <h3>Technologies Used:</h3>
            <% @portfolio_item.technologies.each do |t|%>
            <p><%= t.name %></p>
            <% end %>
        </div>
    </div>
        <div class="btn-group">
            <%= link_to 'Delete Item', portfolio_path(@portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>         
            <%= link_to "Edit", edit_portfolio_path(@portfolio_item) if logged_in?(:site_admin) %>
        </div>
</div>